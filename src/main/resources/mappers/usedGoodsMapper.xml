<?xml version="1.0" encoding="UTF-8"?>

<!-- // 쿼리 들어갈 mapper  -->

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.example.lesson02.dao.UsedGoodsMapper">  <!-- **Mapper 연결 // 연결해주는 곳 -->
 	
 	<!-- **Mapper에 있는 매소드명과 id 일치.  **resultType은 model명 -->
 	<select id="selectUsedGoodsList" resultType="com.example.lesson02.model.UsedGoods">  <!--하나의 행이 어디에 담기는지 써야함.  --><!-- 연결해주는 곳 -->
 		SELECT
 			*
		FROM
			`used_goods`
 	</select>
 
 </mapper>